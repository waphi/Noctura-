#include <Adafruit_GFX.h>    // Core graphics library
#include <Adafruit_ILI9341.h> // LCD library

// Pin definitions
#define TFT_CS     10
#define TFT_RST    8
#define TFT_DC     7

// Initialize the LCD
Adafruit_ILI9341 tft = Adafruit_ILI9341(TFT_CS, TFT_DC, TFT_RST);

void setup() {
  // Start the serial communication
  Serial.begin(9600);
  
  // Initialize the TFT display
  tft.begin();
  
  // Set rotation and clear the screen
  tft.setRotation(3);   // You can change this depending on your display orientation
  tft.fillScreen(ILI9341_WHITE);  // Fill the screen with white
  
  // Set text properties
  tft.setTextColor(ILI9341_BLACK);  // Text color (black)
  tft.setTextSize(2);              // Text size (larger size)
  
  // Display some text
  tft.setCursor(40, 60);           // Set the cursor position (x, y)
  tft.print("skibidi sigma");
  
  delay(2000); // Wait for 2 seconds
}

void loop() {
  // You can add more code here to update the display in a loop if needed
}
